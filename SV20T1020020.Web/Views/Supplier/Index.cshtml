@model SV20T1020020.Web.Models.SupplierSearchResult
@{
    ViewBag.Title = "Quản lý Nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="~/Supplier">
            <!-- Form nhập đầu vào tìm kiếm -->
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control"
                       placeholder="Nhập tên nhà cung cấp cần tìm" value="@Model.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left: 5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin: 10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="bg-primary">
                        <tr>
                            <th>Tên nhà cung cấp</th>
                            <th>Tên giao dịch</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Tỉnh/Thành</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.SupplierName</td>
                                <td>@item.ContactName</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>@item.Province</td>
                                <td class="text-center">
                                    <a href="~/Supplier/Edit/@item.SupplierId" class="btn btn-info btn-xs">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Supplier/Delete/@item.SupplierId" class="btn btn-danger btn-xs">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (p == Model.Page)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Supllier?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
