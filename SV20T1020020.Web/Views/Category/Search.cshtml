@model CategorySearchResult

@{
    Layout = null;
}
<p style="margin: 10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="bg-primary">
            <tr>
                <th>Tên loại hàng</th>
                <th>Mô tả</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a href="~/Category/Edit/@item.CategoryId" class="btn btn-info btn-xs">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Category/Delete/@item.CategoryId" class="btn btn-danger btn-xs">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a href="javascripts:;" onclick="doSearch('#formSearch', @p)">@p</a></li>
            }
        }
    </ul>
</div>