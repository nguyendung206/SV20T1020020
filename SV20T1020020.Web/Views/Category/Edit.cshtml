@model SV20T1020020.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
            <div class="form-group">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>