@{
    ViewBag.Title = "Quản lý Nhân viên";
}

<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="#">
            <!-- Form nhập đầu vào tìm kiếm -->
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control"
                       placeholder="Nhập tên nhân viên cần tìm">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left: 5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin: 10px 0 10px 0">
                Có <strong>1,024</strong> nhân viên trong tổng số <strong>100</strong> trang
            </p>
            <div class="row">
                @for (int i = 1; i <= 9; i++)
                {
                    <div class="col-sm-4">
                        <div class="box box-info">

                            <div class="box-header with-border">
                                <h3 class="box-title">Nguyễn Mai Dũng</h3>
                                <div class="box-tools pull-right">
                                    <a class="btn btn-box-tool" href="~/Employee/Edit/123">
                                        <i class="fa fa-edit text-primary"></i>
                                    </a>
                                    <a class="btn btn-box-tool" href="~/Employee/Delete/123">
                                        <i class="fa fa-trash text-danger"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="box-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img class="profile-user-img img-responsive img-bordered" src="~/images/employees/me.jpg">
                                    </div>
                                    <div class="col-sm-8">
                                        <ul class="list-group list-group-unbordered">
                                            <li class="list-group-item">
                                                <i class="fa fa-birthday-cake"></i> 20/06/2002
                                            </li>
                                            <li class="list-group-item">
                                                <i class="fa fa-phone"></i> 0898188781
                                            </li>
                                            <li class="list-group-item">
                                                <i class="fa fa-envelope"></i> nmdung@gmail.com
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                }
            </div>
            <div class="text-center">
                <ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
