@{
    ViewBag.Title = "Quản lý Mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập dữ liệu đầu vào -->
        <form id="formSearch" action="#">
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>-- Loại hàng --</option>
                        <option>Thực phẩm</option>
                        <option>Điện gia dụng</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="supplier">
                        <option>-- Nhà cung cấp --</option>
                        <option>Công ty TNHH Hitech</option>
                        <option>Vina Foods</option>
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left: 5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </div>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin: 10px 0 10px 0">
                Có <strong>1,024</strong> mặt hàng trong tổng số <strong>100</strong> trang
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="bg-primary">
                        <tr>
                            <th style="width:80px">Ảnh</th>
                            <th>Tên mặt hàng</th>
                            <th>Đơn vị tính</th>
                            <th>Giá</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <tr>
                                <td>
                                    <img src="~/images/products/s24ultra.jpeg" style="width:100%" />
                                </td>
                                <td>Samsung S24 Ultra</td>
                                <td>Cái</td>
                                <td>40.000.000</td>
                                <td>
                                    <a href="~/Product/Edit/123" class="btn btn-info btn-xs">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Product/Delete/123" class="btn btn-danger btn-xs">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
