@model SV20T1020020.Web.Models.ProductSearchResult
@{
    ViewBag.Title = "Quản lý Mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập dữ liệu đầu vào -->
        <form id="formSearch" action="#">
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="categoryId">
                        <option>-- Loại hàng --</option>
                        @foreach (var item in SV20T1020020.BusinessLayers.CommonDataService.ListOfCategory())
                        {
                            <option value="@item.CategoryId">@item.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="supplierId">
                        <option>-- Nhà cung cấp --</option>
                        @foreach (var item in SV20T1020020.BusinessLayers.CommonDataService.ListOfSupplier())
                        {
                            <option value="@item.SupplierId">@item.SupplierName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left: 5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </div>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin: 10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="bg-primary">
                        <tr>
                            <th style="width:80px">Ảnh</th>
                            <th>Tên mặt hàng</th>
                            <th>Đơn vị tính</th>
                            <th>Giá</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>
                                    <img src="~/images/products/@item.Photo" style="width:100%" />
                                </td>
                                <td>@item.ProductName</td>
                                <td>@item.Unit</td>
                                <td>@item.Price</td>
                                <td class="text-center">
                                    <a href="~/Product/Edit/@item.ProductId" class="btn btn-info btn-xs">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Product/Delete/@item.ProductId" class="btn btn-danger btn-xs">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (p == Model.Page)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Product?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
